@{
    Layout = "~/Views/Shared/_MasterDataList.cshtml";
}

@section ToolMenuBar{
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" id="Create">新增</a>
}

@section SearchCondition{
    <table class="grid">
        <tbody>
            <tr>
                <td width="10%">
                    <label>合同编号&nbsp;</label>
                </td>
                <td align="left">
                    <input type="text" name="RepairContractId" id="RepairContractId" data-ctlname="RepairContractId" class="easyui-textbox" />
                </td>
                <td width="10%">
                    <label>客户编码&nbsp;</label>
                </td>
                <td align="left">
                    <input type="text" name="CustomerId" id="CustomerId" data-ctlname="CustomerId" class="easyui-textbox" />
                </td>
                <td width="10%">
                    <label>客户名称&nbsp;</label>
                </td>
                <td align="left">
                    <input type="text" name="CustomerName" id="CustomerName" data-ctlname="CustomerName" class="easyui-textbox" />
                </td>
            </tr>
        </tbody>
    </table>
}

@section GridColumn{
}

@section Script{
    <script type="text/javascript" src="~/js/ProductEdit.js"></script>
    <script type="text/javascript">
        $(function () {
            //初始化网格
            $('#GridList').datagrid({
                url: '/Product/Product/QueryList',
                columns: [[
                    { field: 'Name', title: '商品名称', width: 100 },
                    { field: 'Title', title: '标题', width: 100 },
                    { field: 'SupplierName', title: '商品ID', width: 100 },
                    { field: 'DeliveryAddress', title: '所属供应商', width: 100 },
                    { field: 'Class1', title: '一级类目', width: 100 },
                    { field: 'Class2', title: '二级类目', width: 100 },
                    { field: 'SalePrice', title: '销售价格', width: 100 },
                    { field: 'TotalStock', title: '总库存', width: 100 },
                    { field: 'SaleCount', title: '当前总销量', width: 100 },
                    { field: 'AvaliableStock', title: '当前可用库存', width: 100 },
                    { field: 'Status', title: '商品状态', width: 100 },
                    { field: 'Operation', title: '操作', width: 100 },
                ]]
            });


            $('#Create').click(function () {
                productEdit.addTab("新增商品", "/Product/Product/Edit");
            });







        });

    </script>
}
