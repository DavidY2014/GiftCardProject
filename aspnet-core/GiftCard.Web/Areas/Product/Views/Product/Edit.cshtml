
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MasterDateEdit.cshtml";
}

@section EditorArea{
<table class="grid grid-cols6-width" >
    <tr>
            <td>
                <label>商品名称</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="Name" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label for="">商品标题</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="Title" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label>一级类目</label>
            </td>
            <td>
                <input type="text" id="CustomerCode" name="Class1" class="text-default easyui-textbox" required />
            </td>
        </tr>
        <tr>
            <td>
                <label>二级类目</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="Class2" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label for="">配送区域</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="DeliveryArea" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label>所属供应商</label>
            </td>
            <td >
                <input class="easyui-combobox" name="BelongSupplier" style="width:100%;" data-options="
                        url:'../Product/GetSupplierJson',
                        method:'get',
                        valueField:'id',
                        textField:'text',
                        panelHeight:'auto',
                        labelPosition: 'top'
                        " required/>
            </td>
        </tr>
        <tr>
            <td>
                <label>成本价</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="Cost" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label for="">销售价</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="Price" class="text-default easyui-textbox" required />
            </td>
        </tr>
        <tr>
            <td>
                <label>当前可用库存</label>
            </td>
            <td>
                <input type="text" id="CustomerCode" name="AvaliableStock" class="text-default easyui-textbox" required />
            </td>
            <td>
                <label for="">当前总销量</label>
            </td>
            <td >
                <input type="text" id="CustomerCode" name="SaleAmount" class="text-default easyui-textbox" required />
            </td>
        </tr>
        <tr>
            <td>
                <label>商品图片</label>
            </td>
            <td>
                <input class="easyui-filebox"  labelPosition="top" data-options="prompt:'Choose a file...'" style="width:100%">
                <input class="easyui-filebox"  labelPosition="top" data-options="prompt:'Choose a file...'" style="width:100%">
                <input class="easyui-filebox"  labelPosition="top" data-options="prompt:'Choose a file...'" style="width:100%">
                <input class="easyui-filebox"  labelPosition="top" data-options="prompt:'Choose a file...'" style="width:100%">
            </td>
        </tr>
        <tr>
            <td>
                <label>商品详情</label>
            </td>
            <td>
                <input type="text" id="CustomerCode" name="ProductDetail" class="text-default easyui-textbox" required />
            </td>
        </tr>

</table>

    <span>
        <input type="hidden" name="ClassId"  />
    </span>
}


@section Script{

    <script type="text/javascript">

        $(function () {

            $("#Submit").click(function () {
                $('#EditForm').form('submit', {
                    url: '../Product/SaveProductInfo',
                    onSubmit: function (data) {
                    },
                    success: function (data) {
                        if (data.IsSuccess) {
                            alert("success!")
                        }
                    }
                });

            });







        })
    </script>
}

